# $Id$
# Maintainer: Simone De Gregori <orion@runeaudio.com>

pkgbase=php
pkgname=('php')
pkgdesc="PHP-FPM 5.5.9 (RuneAudio)"
packager="RuneAudio Team"
pkgver=5.5.9
pkgrel=1
arch=('armv6h')
license=('PHP')
url='http://www.php.net'
makedepends=('sqlite' 'file'
             'libmcrypt' 'tidyhtml' 'libltdl' 'libpng' 'libjpeg' 'icu'
             'curl' 'bzip2' 'db' 'gmp' 'systemd')
source=("http://www.php.net/distributions/${pkgbase}-${pkgver}.tar.gz"
        "http://www.php.net/distributions/${pkgbase}-${pkgver}.tar.gz.asc"
        'php.ini.patch' 'php-fpm.conf.in.patch'
        'logrotate.d.php-fpm' 'php-fpm.service' 'php-fpm.tmpfiles')
md5sums=('c018461604db38af48d1ca304cb592c6'
'a956b026f1395a89c383ce6fa80340ee'
'799cd5f91f5253f4b47ec4fd7fccf4f1'
'9f8263996836e27f5be1483e86ac2e33'
'e036c721e5ad927cd1613c7475a58b3a'
'cc2940f5312ba42e7aa1ddfab74b84c4'
'c60343df74f8e1afb13b084d5c0e47ed'
)

prepare() {
	cd ${srcdir}/${pkgbase}-${pkgver}

	patch -p0 -i ${srcdir}/php.ini.patch
	patch -p0 -i ${srcdir}/php-fpm.conf.in.patch
}

build() {
	local _phpconfig="--srcdir=../${pkgbase}-${pkgver} \
		--config-cache \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--sysconfdir=/etc/php \
		--localstatedir=/var \
		--with-layout=GNU \
		--with-config-file-path=/etc/php \
		--with-config-file-scan-dir=/etc/php/conf.d \
		--disable-rpath \
		--mandir=/usr/share/man \
		"

	local _phpextensions="--disable-all \
		--disable-cgi \
		--disable-ipv6 \
		--disable-shared \
		--enable-static \
		--enable-fpm \
		--enable-pcntl \
		--enable-bcmath=static \
		--enable-cli \
		--enable-embed=static \
		--enable-fileinfo \
		--enable-mbstring \
		--enable-opcache=static \
		--enable-phar \
		--enable-posix \
		--enable-shmop \
		--enable-pdo=static \
		--enable-sockets=static \
		--enable-maintainer-zts \
		--enable-zend-signals \
		--enable-sysvmsg \
		--enable-sysvsem \
		--enable-sysvshm \
		--enable-xml \
		--enable-libxml \
		--enable-json \
		--enable-session \
		--with-bz2=static \
		--with-curl=static \
		--with-fpm-systemd \
		--with-gettext \
		--with-iconv \
		--with-mcrypt \
		--with-mhash \
		--with-openssl \
		--with-pcre-regex=/usr \
		--with-pdo-sqlite=static,/usr \
		--with-sqlite3 \
		--with-tidy \
		--with-tsrm-pthreads \
		--with-zlib \
		--without-pic \
		--with-readline \
		--with-pear \
		--with-fpm-user=http \
		--with-fpm-group=http \
	"

	EXTENSION_DIR=/usr/lib/php/modules
	export EXTENSION_DIR
	PEAR_INSTALLDIR=/usr/share/pear
	export PEAR_INSTALLDIR

	cd ${srcdir}/${pkgbase}-${pkgver}

	# php
	mkdir ${srcdir}/build-fpm
	cd ${srcdir}/build-fpm
	ln -s ../${pkgbase}-${pkgver}/configure
	./configure ${_phpconfig} ${_phpextensions}
	make
}

check() {
 	cd ${srcdir}/build-fpm
 	export SNMP_TIMEOUT=1
 	export SNMP_RETRIES=0
 	printf "n\n" | make test
 	echo
}

package_php() {
	pkgdesc='RuneAudio Optimized FastCGI Process Manager for PHP'
	depends=('pcre' 'libxml2' 'bzip2' 'curl' 'systemd')
	backup=('etc/php/php.ini')
	backup=('etc/php/php-fpm.conf')
	backup=('etc/php/pear.conf')
	install='php-fpm.install'

	cd ${srcdir}/build-fpm
	make -j1 INSTALL_ROOT=${pkgdir} install
	install -d -m755 ${pkgdir}/usr/share/pear
	# install php.ini
	install -D -m644 ${srcdir}/${pkgbase}-${pkgver}/php.ini-production ${pkgdir}/etc/php/php.ini
	install -d -m755 ${pkgdir}/etc/php/conf.d/
	install -D -m755 ${srcdir}/build-fpm/sapi/fpm/php-fpm ${pkgdir}/usr/bin/php-fpm
	install -D -m644 ${srcdir}/build-fpm/sapi/fpm/php-fpm.8 ${pkgdir}/usr/share/man/man8/php-fpm.8
	install -D -m644 ${srcdir}/build-fpm/sapi/fpm/php-fpm.conf ${pkgdir}/etc/php/php-fpm.conf
	install -D -m644 ${srcdir}/logrotate.d.php-fpm ${pkgdir}/etc/logrotate.d/php-fpm
	install -d -m755 ${pkgdir}/etc/php/fpm.d
	install -D -m644 ${srcdir}/php-fpm.tmpfiles ${pkgdir}/usr/lib/tmpfiles.d/php-fpm.conf
	install -D -m644 ${srcdir}/php-fpm.service ${pkgdir}/usr/lib/systemd/system/php-fpm.service
	make install-pear INSTALL_ROOT=${pkgdir}
	rm -rf ${pkgdir}/usr/share/pear/.{channels,depdb,depdblock,filemap,lock,registry}
	
	# remove static modules
	rm -f ${pkgdir}/usr/lib/php/modules/*.a
	# remove empty directory
	rmdir ${pkgdir}/usr/include/php/include
}

